<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.breadit.MainActivity">
<RelativeLayout
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/no_of_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginTop="14dp"
        android:text="1/3"
        android:textSize="10dp"/>

   <TextView
       android:id="@+id/contact_info"
       android:layout_marginLeft="10dp"
       android:textColor="#3B3232"
       android:textSize="16dp"
       android:layout_marginTop="30dp"
       android:layout_width="wrap_content"
       android:layout_height= "wrap_content"
       android:text="Contact Information"/>

    <TextView
        android:layout_below="@+id/contact_info"
        android:id="@+id/link"
        android:layout_marginLeft="10dp"
        android:textColor="#3B3232"
        android:textSize="10dp"
        android:layout_marginTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is to enable us link you up with bakeries around you"/>
    <View
        android:id="@+id/line"
        android:layout_below="@+id/link"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="40dp"
        android:layout_height="2dp"
        android:background="#EA7B3A"/>
    <TextView
        android:id="@+id/email"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="46dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address/Phone No."
        android:layout_below="@+id/line"/>
    <EditText
        android:id="@+id/ed"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/email"
        android:layout_width="300dp"
        android:layout_height="40dp" />
    <TextView
        android:textSize="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="47.5dp"
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed"
        android:text="Confirm Location"/>
    <EditText
        android:id="@+id/ed2"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/location"
        android:singleLine="true"
        android:layout_width="300dp"
        android:layout_height="40dp" />
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_below="@+id/ed2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/Transfer_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_1"
            android:textAllCaps="false"
            android:text="Next"
            android:textColor="#fff"
            />
        <TextView
            android:id="@+id/book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Transfer_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:textColor="#3B3232"
            android:text="Cancel" />
    </RelativeLayout>
</RelativeLayout>

</ScrollView>
